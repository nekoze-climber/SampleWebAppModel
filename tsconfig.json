{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "lib": [
            "es2020",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2020",
        "outDir": "lib",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./**/*.ts"],
    "exclude": [
        "./**/node_modules/**/*",
        "./**/.serverless/**/*",
        "/**/.webpack/**/*/",
        "./**/_warmup/**/*/",
        "./**/.vscode/**/*"
    ]
}
