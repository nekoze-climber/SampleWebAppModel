{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "lib": ["es2020"],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2020",
        "outDir": "lib",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./**/*.ts"],
    "exclude": [
        "./**/node_modules/**/*",
        "./**/.serverless/**/*",
        "/**/.webpack/**/*/",
        "./**/_warmup/**/*/",
        "./**/.vscode/**/*"
    ]
}
